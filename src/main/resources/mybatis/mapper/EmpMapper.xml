<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.laydemo.emp.mapper.EmpMapper">
    <!--查询员工列表-->
    <select id="getEmpList" parameterType="com.example.laydemo.common.vo.EmpQuery" resultType="Emp">
        select * from emp
        <include refid="getEmpListWhere"/>
        limit #{start},#{limit}
    </select>
    <!--统计员工数据量-->
    <select id="countEmpList" parameterType="com.example.laydemo.common.vo.EmpQuery" resultType="Long">
        select count(1) from emp
        <include refid="getEmpListWhere"/>
    </select>

    <sql id="getEmpListWhere">
        <where>
            <if test="name != null">
                name like '%' #{name} '%'
            </if>
            <if test="startDate != null">
                <![CDATA[
                birthday>=#{startDate}
                ]]>
            </if>
            <if test="endDate != null">
                <![CDATA[
                birthday <= #{endDate}
                ]]>
            </if>
        </where>
    </sql>
</mapper>